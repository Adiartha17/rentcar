void menuMobil()
{
    menumobil:

        printf("===============================\n");
        printf("         DAFTAR MERK MOBIL     \n");
        printf("===============================\n");
        printf("1. TOYOTA\n");
        printf("2. HONDA\n");
        printf("3. DAIHATSU\n");
        printf("4. MITSUBISHI\n");
        printf("===============================\n");
        printf("Pilih Menu : ");
        scanf("%d", &menu);
        printf("===============================\n");
        system("cls");
        switch(menu)
        {
        case 1:
            mobilToyota();
            break;
        case 2:
            mobilHonda();
            break;
        case 3:
            mobilDaihatsu();
            break;
        case 4:
            mobilMitsubishi();
            break;
        }
}

