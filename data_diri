                    printf("Proceeding Your Vehicle '%d' ", pmKawasaki);
                    printf("Press Enter to Return to the Main Menu");
                    system("cls");
                    checkout();
                }
                else if (decision=='n')
                {
                    printf("Press Enter to Return to Motorcycles Menu");
                    getch();
                    system("cls");
                    goto motorkawasaki;
                }
            break;
        case 4:
            printf("Are You Sure to Rent This Motorcycle?\n");
            printf("(y/n)");
            scanf("%c", &decision);
                if (decision=='y')
                {
                    printf("Proceeding Your Vehicle '%d' ", pmKawasaki);
                    printf("Press Enter to Return to the Main Menu");
                    system("cls");
                    checkout();
                }
                else if (decision=='n')
                {
                    printf("Press Enter to Return to Motorcycles Menu");
                    getch();
                    system("cls");
                    goto motorkawasaki;
                }
            break;
        case 5:
            printf("Are You Sure to Rent This Motorcycle?\n");
            printf("(y/n)");
            scanf("%c", &decision);
                if (decision=='y')
                {
                    printf("Proceeding Your Vehicle '%d' ", pmKawasaki);
                    printf("Press Enter to Return to the Main Menu");
                    system("cls");
                    checkout();
                }
                else if (decision=='n')
                {
                    printf("Press Enter to Return to Motorcycles Menu");
                    getch();
                    system("cls");
                    goto motorkawasaki;
                }
            break;
        default:
            printf("Invalid Number!");
            printf("Press Enter to Re-choosing Your Vehicle");
            getch();
            system("cls");
            goto motorkawasaki;
        }
}

