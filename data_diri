int main()
{
printf("\n                          ===============================================");
    printf("\n                      |                  WELCOME                    |");
    printf("\n                      |           CV. WISMA KARYA MOTOR             |");
    printf("\n                      |              Enjoy Your Ride                |");
    printf("\n                      |           VEHICLE RENTAL PROGRAM            |");
    printf("\n                      -----------------------------------------------");
    printf("\n                      |           PRESS ENTER TO PROCEED            |");
    printf("\n                      -----------------------------------------------");
    getch();
    system ("cls");

    Login:
    printf("\n                            ==================================");
    printf("\n                            | 1.|         LOGIN              |");
    printf("\n                            ==================================");
    printf("\n                            |                                |");
    printf("\n                            |        ENTER YOUR CHOICE       |");
    printf("\n                            |_____|                    |_____|");
    printf("\n                                             ");
    scanf("%d",&n);
    system("cls");
    switch(n)
    {
    case 1:
        login();
        break;
    default: printf("\n\n                             NO MATCH FOUND");
        printf("\n\n                        Press Enter to re-Enter the choice");
        system("cls");
        goto Login;
    }
    return 0;
}
void login()
{
      char c,name[30],pass[30]; int z=0;
{
      printf("\n\n\t\t\t========================");
      printf("\n\n\t\t\t\t       LOGIN");
      printf("\n\t\t\t\t========================");
      printf("\n\n\t\t\tUSERNAME: ");
      scanf("%s",name);
      printf("\n\n\t\t\tPASSWORD: ");
      while((c=getch())!=13)
        {
          pass[z++]=c;
          printf("%c",'*');
        }
        pass[z]='\0';
        system("cls");
      {
	  if(strcmp(user,"shiv")==0&&strcmp(pass,"shiv12")==0 || strcmp(user,"yogi")==0&&strcmp(pass,"12345")==0 || strcmp(user,"adi")==0&&strcmp(pass,"54321")==0)
      {
	  printf("=========================================");
      printf("             ACCESS ACCEPTED\n");
	  printf("=========================================");
	  printf("\n           WELCOME FELLAS! %s !\n\n", user);
      system("Klik Enter to See The Rules!");
      system("cls");
	  rules();
      }
      else{
            printf("====================
            printf("|  WRONG PASSWORD! |\n");
            printf("====================
            printf("\n\nPress ENTER to Re-login!");
            system("cls");
            goto login;
          }
     }
}
getch();
}
    
void rules()
{
    rules:

        printf("\n \n");
        printf("=========================================================================================================================================\n");
        printf("                                                                RULES                                                                    \n");
        printf("=========================================================================================================================================\n");
        printf("1.Vehicle renters must have a Driving License in accordance with the car being rented\n");
        printf("2.Have an ID Card that will be kept by the owner of CV Wisma Karya Motor during the rental period\n");
        printf("3.There are provisions for a charge if the lease time limit is exceeded with the price of charge equal to the rental price of the vehicle\n");
        printf("4.There are provisions for a charge if the vehicle being rented is damaged with a charge according to the cost of repairs\n");
        printf("5.The distance to use the rental vehicle is limited to the province\n");
        printf("6.Rental vehicles are not permitted for racing use\n");
	printf("\n Click Enter To Continue");
        getch();
        system("cls");
        dataDiri();

}

void dataDiri()
{
    datadiri:

        printf("===============================\n");
        printf("    INPUT YOUR PERSONAL DATA   \n");
        printf("===============================\n");
        fflush(stdin);
	printf("Name            : ");
        scanf("%[^\n]s", &nama);
        fflush(stdin);
	printf("Country         : ");
        scanf("%[^\n]s", &asal);
        fflush(stdin);
	printf("Address         : ");
        scanf("%[^\n]s", &alamat);
        printf("Gender          : ");
        scanf("%s", &jenisKelamin);
        printf("KTP/Passport    : ");
        scanf("%d", &id);
        printf("Phone Number    : ");
        scanf("%d", &hp);
        menuUtama();
}

void menuUtama()
{
    pilihan:

        printf("Menu	:\n");
        printf("===============================\n");
        printf("| 01. Motorcycle              |\n");
        printf("| 02. Car                     |\n");
        printf("===============================\n");
        printf("Choose Menu     : ");
        scanf("%d", &menu);
        printf("===============================\n");
        system("cls");
        switch(menu)
        {
        case 1:
            menuMotor();
            break;
        case 2:
            menuMobil();
            break;
        default:
            printf("Invalid Menu!\n");
            printf("Please Re-Enter The Valid Menu\n");
            goto pilihan;
        }

}

void menuMotor()
{
    menumotor:

        printf("===============================\n");
        printf("   LIST OF MOTORCYCLES BRAND   \n");
        printf("===============================\n");
        printf("1. Honda\n");
        printf("2. Yamaha\n");
        printf("3. Kawasaki\n");
        printf("4. Prestige\n");
        printf("===============================\n");
        printf("Choose Menu : ");
        scanf("%d", &menu);
        printf("===============================\n");
        system("cls");
        switch(menu)
        {
        case 1:
            motorHonda();
            break;
        case 2:
            motorYamaha();
            break;
        case 3:
            motorKawasaki();
            break;
        case 4:
            motorPrestige();
            break;
        }
}

